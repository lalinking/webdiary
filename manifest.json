{
  "manifest_version": 2,
  "name": "__MSG_main_name__",
  "description": "__MSG_main_desc__",
  "version": "4.2",
  "icons": {
    "48": "/resource/icon48.png"
  },
  "author": "Ric forveer2013@gmail.com",
  "default_locale": "zh_CN",
  "options_page": "/page/setting/_.html?from=opt",
  "background": {
    "scripts": [
      "lib/pako.min.js",
      "upgrade.js",
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "__MSG_main_name__ \n __MSG_main_desc__",
    "default_icon": "/resource/icon48.png",
    "default_popup": "/page/main/_.html"
  },
  "minimum_chrome_version": "38",
  "permissions": [
    "bookmarks",
    "history",
    "storage",
    "chrome://favicon/"
  ],
  "optional_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    "/resource/hide.png",
    "/resource/hide-no.png",
    "/resource/incognito.png",
    "/resource/incognito-no.png",
    "/resource/remark.png",
    "/resource/delete-x.png",
    "/resource/icon48.png"
  ]
}
